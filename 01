import sys
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

def get_exchange_rate(date, currency_code):
    url = f"https://www.boc.cn/sourcedb/whpj/index_{date}.html"
    
    driver = webdriver.Chrome()
    driver.get(url)

    try:
        WebDriverWait(driver, 10).until(EC.presence_of_element_located((By.CSS_SELECTOR, "#sorthj tbody tr")))
        rows = driver.find_elements(By.CSS_SELECTOR, "#sorthj tbody tr")
        for row in rows:
            cols = row.find_elements(By.TAG_NAME, "td")
            if len(cols) >= 5 and cols[0].text == currency_code:
                rate = cols[5].text
                return rate
    except Exception as e:
        print(f"An error occurred: {e}")
    finally:
        driver.quit()

    return None

if __name__ == "__main__":
    if len(sys.argv) != 3:
        print("Usage: python3 yourcode.py <date> <currency_code>")
        sys.exit(1)

    date = sys.argv[1]
    currency_code = sys.argv[2]

    rate = get_exchange_rate(date, currency_code)

    if rate:
        with open("result.txt", "w") as f:
            f.write(rate)
        print(f"The exchange rate for {currency_code} on {date} is: {rate}")
    else:
        print(f"Failed to get the exchange rate for {currency_code} on {date}")

